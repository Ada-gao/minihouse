/**app.wxss**/
@import 'weui.wxss';

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  /* padding: 200rpx 0; */
  box-sizing: border-box;
}

.tabBar {
  width: 100%;
  height: 128rpx;
  display: flex;
  flex-direction: row;
  background: black;
  position: fixed;
  top: 0;
  z-index: 100;
}

.tabBarBack {
  margin-top: 40rpx;
  width: 85rpx;
  height: 85rpx;
  text-align: center;
  line-height: 85rpx;
  padding-top: 15rpx;
  position: fixed;
  z-index: 1;
}

.tabBarIcon {
  width: 45rpx;
  height: 45rpx;
}

.tabBarTitle {
  color: #fff;
  text-align: center;
  padding-top: 60rpx;
  width: 100%;
  font-size: 36rpx;
}

.recommend_title {
  font-size: 36rpx;
  /* padding-left: 30rpx; */
  box-sizing: border-box;
  font-weight: bold;
  /* display: flex; *//* flex-direction: row; */
  width: 100%;
  margin-top: 20rpx;
}

.submit-btn {
  background-color: #ce3e14;
  margin: 60rpx 30rpx;
  margin-bottom: 148rpx;
  border-radius: 50rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx !important;
  color: #fff;
}

.icon_img {
  width: 46rpx;
  height: 46rpx;
  margin-right: 20rpx;
  vertical-align: middle;
}
