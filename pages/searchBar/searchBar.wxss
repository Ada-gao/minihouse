/* pages/searchBar.wxss */

.heard {
  /* justify-content: space-around; */
  /* display: flex; */
  width: 750rpx;
  height: 100rpx;
  background: #f8f8f8;
  padding: 8rpx 30rpx;
  box-sizing: border-box;
}

.search-bar_label {
  width: 690rpx;
}

.search-bar_form {
  width: 600rpx;
}

.heard-search {
  display: inline-block;
  font-size: 28rpx;
  height: 80rpx;
  width: 100%;
  background: white;
  border-radius: 40rpx;
  line-height: 80rpx;
  border: 2rpx solid #e6e6e6;
  padding-left: 80rpx;
  box-sizing: border-box;
  position: relative;
}

.text {
  color: #999;
}

.search-bar_cancel {
  line-height: 80rpx;
  height: 80rpx;
  position: absolute;
  right: 20rpx;
  top: 10rpx;
}

.heard-search-icon {
  height: 28rpx;
  width: 28rpx;
  position: absolute;
  top: 32rpx;
  left: 62rpx;
}