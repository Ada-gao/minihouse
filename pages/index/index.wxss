.sort {
  flex: 1;
  border-right: 1rpx solid #e6e6e6;
  text-align: center;
  font-size: 28rpx;
  height: 100%;
}
.heard-search-icon {
  width: 28rpx;
  height: 28rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 24rpx;
}

.inputing {
  flex: 2.5;
  /* text-indent: 68rpx; */
