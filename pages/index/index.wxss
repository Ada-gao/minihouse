}

.mainImg {
  width: 100%;
  height: 280rpx;
}

.search {
  width: 690rpx;
  height: 80rpx;
  border: 1rpx solid #e6e6e6;
  border-radius: 40rpx;
  position: absolute;
  bottom: -40rpx;
  margin-left: 30rpx;
  /* left: 50%; *//* transform: translateX(-50%); */
  background-color: #fff;
  display: flex;
  font-size: 28rpx;
