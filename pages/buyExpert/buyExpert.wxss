/* pages/buyExpert/buyExpert.wxss */

.main {
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.intend .weui-cell {
  padding-left: 0;
  padding-right: 0;
}

.intend .weui-cell::before {
  border: none;
}

.weui-border-b {
  border-bottom: 1rpx solid #e6e6e6;
}

.h124 {
  height: 124rpx;
  box-sizing: border-box;
}

.text-right {
  text-align: right;
}

.weui-cells {
  font-size: 32rpx;
}

.weui-cell {
  height: 124rpx;
  box-sizing: border-box;
}

.weui-cell_input {
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

.weui-label.w330 {
  width: 330rpx;
}

.radio-btn {
  background-color: rgb(230 230 230);
  display: inline;
  padding: 10rpx 36rpx;
  border-radius: 36rpx;
  outline-style: none;
  color: rgb(120 120 120);
  margin-left: 30rpx;
}

.condition .condition-item {
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  border-bottom: 2rpx solid #e6e6e6;
}

.weui-cells:before {
  border-top: none;
}

.weui-cells:after {
  border-bottom: none;
}

/* .recommend_title {
    font-size: 36rpx;
