    font-weight: 700;
  } */

.range-title {
  text-align: center;
  color: #ce3e14;
  font-size: 32rpx;
}

checkbox-group {
  display: flex;
  flex-wrap: wrap;
}

checkbox-group:before {
  border-top: none;
}

checkbox-group:after {
  border-bottom: none;
}

.weui-check__label {
  /* padding-left: 0; */
  padding: 0;
  background-color: #fff;
  height: 64rpx;
  margin-right: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 50rpx;
}

.weui-check__label:before {
  border-top: none;
}

.weui-check__label .weui-cell__bd {
  padding: 10rpx 20rpx;
  background-color: #e6e6e6;
  color: #787878;
  border-radius: 50rpx;
}

.weui-cell__bd.red {
  background-color: #ce3e14;
  color: #fff;
}

checkbox-group {
  margin-top: 20rpx;
}