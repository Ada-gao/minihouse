/* components/category.wxss */

.categoryList {
  width: 750rpx;
  height: 232rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #f4f4f4;
}

.category-info {
  display: inline-block;
  text-align: center;
  position: relative;
  margin-top: 40rpx;
  width: 20%;
  height: 150rpx;
}

.category-image {
  width: 95rpx;
  height: 95rpx;
}

.category-text {
  font-size: 25rpx;
  width: 100%;
  line-height: 30rpx;
}
