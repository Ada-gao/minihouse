  width: 750rpx;
  font-size: 28rpx;
  /* height: 80rpx; */
}

.sort {
  display: flex;
  width: 750rpx;
  border-bottom: 1rpx solid #e6e6e6;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

.sort-tab {
  flex: 1;
  text-align: center;
  border-left: 1rpx solid #e6e6e6;
  height: 40rpx;
  position: relative;
}

.none-l-line {
  border-left: none;
}

