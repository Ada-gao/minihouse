.down_arrow {
  width: 48rpx;
  height: 48rpx;
  margin-left: 10rpx;
}

.tab-mask {
  position: fixed;
  top: 0;
  left: 0;
  background-color: #33333380;
  z-index: 1000;
  height: 100%;
}

.swiper-tab {
  background-color: #fff;
}

.area-item {
  display: flex;
}

.first-items {
  flex: 1;
  background-color: #eee;
}

.bg-white {
  background-color: #fff;
  height: 40rpx;
  padding: 20rpx 0 20rpx 40rpx;
}

.second-items {
  flex: 1;
  padding-left: 40rpx;
  border-left: 1rpx solid #e6e6e6;
  max-height: 1000rpx;
  overflow-y: auto;
}

.second-item {
  height: 80rpx;
  padding: 20rpx 0;
  box-sizing: border-box;
  border-bottom: 1rpx solid #e6e6e6;
}

.swiper-box {
  background: #fff;
  width: 100%;
  /* height: 600rpx; */
  display: block;
  position: absolute;
  top: 83rpx;
  z-index: 333333;
  left: 0;
  /* animation: displays 0.5s; */
}

@keyframes displays {
  from {
    height: 0px;
  }

  to {
    height: 600rpx;
  }
}

.swiper-tab-item {
  position: relative;
}

