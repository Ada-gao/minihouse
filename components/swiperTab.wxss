.price-item {
  display: flex;
  /* justify-content: space-around; */
  align-content: flex-start;
  flex-wrap: wrap;
  /* padding: 20rpx; */
  box-sizing: border-box;
}

.label-item {
  width: 150rpx;
  height: 50rpx;
  background-color: rgb(248, 248, 248);
  margin-top: 20rpx;
  margin-left: 30rpx;
  text-align: center;
  line-height: 50rpx;
  font-size: 24rpx;
  color: #666;
  display: inline-block;
}

.price-selected {
  background-color: #dcf7f0;
  color: #1bd1a5;
}

.btn-box {
  width: 100%;
  display: flex;
  align-items: center;
  height: 120rpx;
